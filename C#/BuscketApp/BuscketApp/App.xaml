<Application x:Class="BuscketApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BuscketApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Name="BaseType" TargetType="Control">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseType}"></Style>
        <Style TargetType="Button" BasedOn="{StaticResource BaseType}"></Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource BaseType}"/>
    </Application.Resources>
</Application>
