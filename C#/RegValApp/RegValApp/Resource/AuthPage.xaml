<Page x:Class="RegValApp.Resource.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegValApp.Resource"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Border>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="MediumPurple" Width="200">
            <TextBlock TextAlignment="Center" Text=" Authorization"/>
            <TextBlock Text="Login"/>
            <TextBox Text="{Binding Login}" x:Name="LoginTb"/>
            <TextBlock Text="Password"/>
            <TextBox Text="{Binding Password}" x:Name="PasswordTb"/>
            <Button x:Name="LoginBtn" Content="Log in" Click="LoginBtn_Click" IsDefault="True"/>
            <Button x:Name="RegisterBtn" Content="Register" Click="RegisterBtn_Click" IsDefault="True"/>
        </StackPanel>
        </Border>
    </Grid>
</Page>
