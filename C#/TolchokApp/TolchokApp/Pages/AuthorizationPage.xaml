<Page x:Class="TolchokApp.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TolchokApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <DockPanel>
            <WrapPanel DockPanel.Dock="Top">
                <Image/>
                <Label/>
            </WrapPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
                <Label/>
                <TextBlock Text="Login"/>
                <TextBox x:Name="LoginTb" Text="{Binding Login}"/>
                <TextBlock Text="Password"/>
                <TextBox x:Name="PasswordTb" Text="{Binding Password}"/>
                <Button x:Name="LoginBtn" Content="Log In" Click="LoginBtn_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
