<Page x:Class="DiscountApp.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiscountApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <Label Content="Authorization"/>
            <TextBlock Text="L0g1n"/>
            <TextBox x:Name="LoginTb" Text="{Binding Login}"/>
            <TextBlock Text="Passwrot"/>
            <TextBox x:Name="PasswordTb" Text="{Binding Password}"/>
            <Button x:Name="LogInBtn" Content="Log in" Click="LogInBtn_Click"/>
            <Button x:Name="SignUpBtn" Content="Sign Up" Click="SignUpBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
