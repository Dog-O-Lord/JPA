<Page x:Class="DiscountApp.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiscountApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="ItemIMG" Height="100" Width="100" Source="{Binding Image, TargetNullValue = {StaticResource DefaultImage}}"/>
            <Button x:Name="AddImgBtn" Content="Add Image" Click="AddImgBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
